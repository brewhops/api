{
  "name": "NinkasiServer",
  "version": "0.0.1",
  "description": "An express based REST API for tracking brewing data",
  "main": "./dist/index.js",
  "engines": {
    "node": "11.6.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "cross-env  NODE_ENV=test mocha --reporter spec 'src/test/components/*.js' --file src/test/dbSetup.js --exit",
    "test-intg": "cross-env  NODE_ENV=test docker-compose -f DEV.docker-compose.yaml up -d test-database; sleep 10; cross-env NODE_ENV=test TEST_PG_HOST=localhost TEST_PG_PORT=45758 mocha --reporter spec 'test/components/*.js' --file test/dbSetup.js --exit; NODE_ENV=test docker-compose -f DEV.docker-compose.yaml stop test-database;",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json --fix",
    "start": "npm run build && npm run debug",
    "debug": "NODE_ENV=development nodemon --legacy-watch --watch ./dist --inspect=0.0.0.0:9222 --nolazy",
    "dev": "cross-env NODE_ENV=development docker-compose up database web-server",
    "format": "prettier --single-quote --print-width 100 --write src/**/*.ts",
    "watch-ts": "tsc -w -p ./tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ConnorChristensen/NinkasiServer.git"
  },
  "author": "Connor Christensen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ConnorChristensen/NinkasiServer/issues"
  },
  "homepage": "https://github.com/ConnorChristensen/NinkasiServer#readme",
  "devDependencies": {
    "@osu-cass/tslint-config": "^2.0.0",
    "@types/express": "^4.16.0",
    "@types/is": "0.0.21",
    "@types/joi": "^14.0.0",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/node": "^10.12.9",
    "@types/pg": "^7.4.11",
    "chai": "^4.1.2",
    "crypto-js": "^3.1.9-1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "knex": "^0.14.6",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "prettier": "^1.15.2",
    "sinon": "^6.0.0",
    "supertest": "^3.1.0",
    "tslint": "^5.11.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/boom": "^7.2.1",
    "@types/chai": "^4.1.7",
    "@types/cors": "^2.8.4",
    "@types/crypto-js": "^3.1.43",
    "@types/dotenv": "^6.1.0",
    "bcrypt": "^3.0.3",
    "boom": "^7.2.0",
    "chai-as-promised": "^7.1.1",
    "command-line-args": "^5.0.2",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "dotenv": "^5.0.1",
    "express": "^4.16.4",
    "express-validation": "^1.0.2",
    "is": "^3.2.1",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.3.0",
    "pg": "^7.4.3",
    "uuid": "^3.2.1"
  }
}
